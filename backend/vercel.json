{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "handle": "filesystem",
      "src": "/client/(.*)"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/index.js"
    }
  ]
}
